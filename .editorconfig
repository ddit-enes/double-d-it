# Root editorconfig file
root = true

# General settings for all files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Settings for code files
[*.{js,ts,css,json}]
indent_style = space
indent_size = 2

# Settings for markdown files
[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
